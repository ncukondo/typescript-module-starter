{
  "name": "@ncukondo/typescript-module-starter",
  "version": "0.1.1",
  "description": "",
  "main": "./built/index.js",
  "scripts": {
    "lint": "tslint --fix src/**/*.ts",
    "test": "jest",
    "copy-to-dist": "cpx src/*.html dist",
    "watch": "npm run build-dev && webpack --watch --config webpack.dev.config.js",
    "start": "webpack-dev-server --config webpack.dev.config.js",
    "clean": "rimraf built",
    "clean-dist": "rimraf dist",
    "build-dev": "npm run clean-dist &&  npm run copy-to-dist && webpack --config webpack.dev.config.js",
    "build": "npm run clean-built && yarn run tsc -p ./tsconfig.module.json"
  },
  "keywords": [
    "typescript",
    "Jest"
  ],
  "author": "ncukondo",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "cpx": "^1.5.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/.+(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
